.pasd-cen {
    padding: 40rpx 30rpx;
    display:flex;
    flex-direction:column;
}
.pasd-cen .section {
    flex:1;
    margin-bottom:20rpx;
}
.pasd-cen .section input {
    border:1px solid #afafaf;
    border-radius:15rpx;
    height:94rpx;
    line-height:94rpx;
    font-size:32rpx;
    padding-left:24rpx;
}
.pasd-cen   .section-btn {
    display: flex;
    justify-content:center;
}
.pasd-cen  .section-btn input{
    flex: 2;
}
.pasd-cen   .section-btn button{
    flex: 1;
    margin-left: 30rpx;
}
.countdown-btn {
    font-size: 28rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}
.section-submit {
    background-color:#577eff;
    color: #fff;
}
.banners-logo {
 display: flex;
  justify-content:center;
  align-items:center;
  height:150px;
}
.banners-logo image{
 height: 111rpx;
width: 353rpx;
}
.authorization  {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-wrap: wrap;
}
.authorization button{
    background: #1AAD16;
    color: #fff;
    height: 100%;
    width: 100%;
    border-radius: 100%;
    opacity: 0;
    position: absolute;
}
.authorization .iocs {
    font-size: 100rpx;
    color: #15c481;
    width: 100%;
    display: flex;
    justify-content: center
}
.authorization  text {
    font-size: 30rpx;
    color: #3b3b3b;
    padding-top: 15rpx;
}
.other-loading {
    display: flex;
    justify-content: center;
    font-size: 36rpx;  
    align-items: center;
    padding-top: 25rpx;
    padding-bottom: 55rpx;
}
.other-loading text{
    height: 1px;
    flex: 1;
    background: #d8d8d8;
}
.other-loading .text {
    height: inherit;
    width: inherit;
    flex: inherit;
   background: #fff; 
   padding: 0 32rpx; 
   font-size: 30rpx;
   color: #838383;
}