        align-items: center;
        justify-content: center;
        background: #fff;
}

.content {
        width: 184rpx;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
}

.click-view {
        height: 184rpx;
        width: 184rpx;
        border: 1px solid #577eff;
        border-radius: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
}

.click-view.anim-view:after {
        content: "";
        position: absolute;
        top: 0rpx;
        left: 0rpx;
        height: 185rpx;
        width: 185rpx;
        border: 3rpx solid #577eff;
        border-radius: 100%;
        z-index: 1;
        opacity: 0;
        animation: warn 1.5s linear;
        animation-iteration-count: infinite;
}

.click-view.anim-view:before {
        content: "";
        position: absolute;
        top: 0rpx;
        left: 0rpx;
        height: 185rpx;
        width: 185rpx;
        border: 3rpx solid #577eff;
        border-radius: 100%;
        z-index: 1;
        opacity: 0;
        animation: warn 2.5s linear;
        animation-iteration-count: infinite;
}

.click-view text {
        font-size: 90rpx;
        color: #577eff;
}

.act-view {
        background: #577eff;
}

.act-view text {
