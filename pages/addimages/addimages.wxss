@keyframes warn {
        0% {
                transform: scale(1);
                opacity: 0.0;
        }

        25% {
                transform: scale(1.2);
                opacity: 0.1;
        }

        50% {
                transform: scale(1.5);
                opacity: 0.3;
        }

        75% {
                transform: scale(1.8);
                opacity: 0.5;
        }

        100% {
                transform: scale(2);
                opacity: 0.0;
        }
}

.text-box {
        display: flex;
}

.text-box textarea {
        padding: 15rpx;
        flex: 1;
        font-size: 30rpx;
        height: 100%;
}

.upload-img {
        display: flex;
        padding: 15rpx;
        justify-content: flex-end;
        align-items: center;
}

.upload-img image {
        height: 92rpx;
        width: 92rpx;
        margin-left: 15rpx;
}

.upload-img  .imgs-style {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
